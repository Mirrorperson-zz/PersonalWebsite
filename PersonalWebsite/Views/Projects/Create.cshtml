@model PersonalWebsite.Models.ProjectModel

@{
    ViewBag.Title = "Create";
}

<h2>Create a new project</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div>
                <div class="">
                    @Html.LabelFor(model => model.projectTitle, "Project Title", new { @class = "" }):
                    @Html.TextBoxFor(model => model.projectTitle, new { @class = "form-control longTextbox" })
                    @Html.ValidationMessageFor(model => model.projectTitle, "A project title is required.", new { @class= "validationMsg validationWarning" })
                    @Html.LabelFor(model => model.projectDescription, "Project Description", new { @class = "" }):
                    @Html.TextAreaFor(model => model.projectDescription, new { @class = "form-control longTextbox textAreaHeight" })
                </div>
                <input type="submit" value="Create" class="btn-xl js-scroll-trigger formMargin" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
